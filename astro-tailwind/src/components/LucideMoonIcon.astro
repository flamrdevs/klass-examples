---
import type { HTMLAttributes } from "astro/types";

import { cxs } from "@klass/core";
import { splitProps } from "./utils";

type Props = HTMLAttributes<"svg"> & { size?: number };

const { size = 24, ...props } = Astro.props;

const [classes, attrs] = splitProps(props, ["class", "class:list"]);
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={cxs("lucide lucide-moon", classes.class, classes["class:list"])}
  {...attrs}
>
  <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
</svg>
