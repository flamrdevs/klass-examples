---
import "~/styles/globals.ts";

type Props = {
  title?: string;
  description?: string;
};

const { title = "astro-tailwind", description = "klass example with astro + tailwindcss" } = Astro.props;
---

<html lang="en" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta name="viewport" content="width=device-width" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <slot name="head" />
  </head>
  <body>
    <slot name="body" />
  </body>
</html>
