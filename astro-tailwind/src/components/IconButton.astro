---
import type { HTMLTag, Polymorphic } from "astro/types";

import * as klass from "./klass";
import propsplit from "propsplit";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag } & klass.IconButtonVariants>;

const { as: Tag = "button", ...props } = Astro.props;

const [classes, variants, attrs] = propsplit(props, ["class", "class:list"], klass.IconButton.vk);
---

<Tag type="button" {...attrs} class={klass.IconButton(variants, [classes.class, classes["class:list"]])}>
  <slot />
</Tag>
